{
  "manifest_version": 3,
  "name": "code_review_prompt",
  "version": "1.0",
  "description": "テキストエリアに特定の文字列をペーストする拡張機能",
  "permissions": ["activeTab", "clipboardWrite", "contextMenus", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/codereview16.png",
    "48": "icons/codereview48.png",
    "128": "icons/codereview128.png"
  }
}
